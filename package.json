{
  "name": "waos-conventional-changelog",
  "version": "0.0.0-development",
  "description": "Commitizen adapter following the conventional-changelog format with emojis choice.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha *.test.js",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/WeAreOpenSourceProjects/waos-conventional-changelog",
  "repository": {
    "type": "git",
    "url": "https://github.com/WeAreOpenSourceProjects/waos-conventional-changelog.git"
  },
  "author": "Pierre Brisorgueil <brisorgueilp@gmail.com> for the fork, Jim Cummins <jimthedev@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "conventional-commit-types": "^2.2.0",
    "lodash.map": "^4.6.0",
    "longest": "^2.0.1",
    "right-pad": "^1.0.1",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "cosmiconfig": "^5.2.0",
    "mocha": "^6.0.2",
    "mock-require": "^3.0.3",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "semver": "^6.0.0",
    "waos-conventional-changelog": "^1.2.0",
    "husky": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/waos-conventional-changelog"
    }
  }
}
